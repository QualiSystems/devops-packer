{
  "builders": [
    {
      "name": "docker",
      "type": "docker",
      "image": "{{ user `docker_image` }}",
      "export_path": "image.tar"
    },
    {
      "name": "hyperv-iso",
      "type": "hyperv-iso",
      "iso_urls": [
        "{{ user `iso_local_cache_dir` }}/{{ user `iso_cached_file_name` }}",
        "{{ user `iso_network_cache_dir` }}/{{ user `iso_cached_file_name` }}",
        "{{ user `iso_url` }}"
      ],
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "memory": "{{ user `ram_size` }}",
      "disk_size": "{{ user `disk_size` }}",
      "enable_secure_boot": false,
      "generation": "{{user `hyperv_generation`}}",
      "vm_name": "{{ user `vm_name` }}",
      "boot_wait": "10s",
      "boot_command": [
        "{{ user `boot_command_prefix` }}",
        "set gfxpayload=1024x768<enter>",
        "linux /install/vmlinuz ",
        "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/{{ user `preseed` }} ",
        "debian-installer={{ user `locale` }} auto locale={{ user `locale` }} kbd-chooser/method=us ",
        "hostname={{ user `vm_name` }} ",
        "fb=false debconf/frontend=noninteractive ",
        "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout={{ user `keyboard_layout` }} ",
        "keyboard-configuration/variant={{ user `keyboard_layout_variant` }} console-setup/ask_detect=false <enter>",
        "initrd /install/initrd.gz<enter>",
        "boot<enter>"
      ],
      "communicator": "ssh",
      "ssh_timeout": "10000s",
      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
      "output_directory": "{{ user `build_output_directory` }}/hyperv/{{ user `vm_name` }}",
      "http_directory": "preseed"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "expect_disconnect": true,
      "override": {
        "hyperv-iso": {
          "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
          "scripts": [
            "scripts/update.sh",
            "scripts/configure_sudoers.sh"
          ]
        },
        "docker": {
          "scripts": [
            "scripts/update_docker.sh",
            "scripts/install_curl.sh"
          ]
        }
      }
    },
    {
      "type": "chef-solo",
      "override": {
        "docker": {
          "prevent_sudo": true
        }
      },
      "cookbook_paths": [
        "../../../chef-cookbooks",
        "../../../.cookbooks_deps"
      ],
      "roles_path": "../../../chef-cookbooks/roles",
      "guest_os_type": "unix",
      "json": {
        "box_settings": {
          "is_desktop": "{{ if eq \"docker\" build_name }}{{ false }}{{ else }}{{ user `is_desktop` }}{{ end }}",
          "time_zone": "{{ user `time_zone` }}",
          "ssh_user": "{{ if eq \"docker\" build_name }}{{ user `docker_user_name` }}{{ else }}{{ user `hyperv_iso_user_name` }}{{ end }}",
          "ssh_user_password": "{{ if eq \"docker\" build_name }}{{ user `docker_user_password` }}{{ else }}{{ user `hyperv_iso_user_password` }}{{ end }}",
          "ssh_user_group": "{{ if eq \"docker\" build_name }}{{ user `docker_user_group` }}{{ else }}{{ user `hyperv_iso_user_group` }}{{ end }}"
        },
        "mono_apt_repo_distro": "{{ user `mono_apt_repo_distro` }}",
        "{{ user `custom_attribute_name` }}": "{{ user `custom_attribute_value` }}"
      },
      "run_list": [
        "chef-ubuntu::install_base_server_packages",
        "{{ if eq \"hyperv-iso\" build_name }}{{\"chef-ubuntu::install_hyperv_integration_services\"}}{{ else }}{{\"chef-helper::dummy_recipe\"}}{{ end }}",
        "chef-ubuntu::configure_ssh",
        "chef-ubuntu::add_vagrant_ssh_key",
        "chef-ubuntu::set_time_zone",
        "chef-ubuntu::purge_apt_packages",
        "chef-ubuntu::delete_redundant_files",
        "{{ user `custom_role` }}",
        "chef-ubuntu::clean_apt"
      ]
    },
    {
      "type": "shell",
      "expect_disconnect": true,
      "scripts": [
        "scripts/uninstall_chef.sh",
        "scripts/minimize.sh"
      ],
      "override": {
        "hyperv-iso": {
          "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'"
        }
      }
    }
  ],
  "post-processors": [
    {
      "only": [ "hyperv-iso" ],
      "type": "vagrant",
      "keep_input_artifact": true,
      "output": "{{ user `vagrant_boxes_dir` }}/{{ user `vm_name` }}-{{.Provider}}.box",
      "vagrantfile_template": "ubuntu_generic_vagrantfile.template"
    },
    {
      "only": [ "docker" ],
      "type": "docker-import",
      "repository": "{{ user `docker_imported_image_name` }}",
      "tag": "{{ user `docker_imported_image_tag` }}",
      "changes": "{{ user `docker_file_changes` }}"
    }
  ],
  "variables": {
    "iso_checksum_type": "{{ env `iso_checksum_type` }}",
    "iso_checksum": "{{ env `iso_checksum` }}",
    "iso_url": "{{ env `iso_url` }}",
    "iso_network_cache_dir": "{{ env `iso_network_cache_dir` }}",
    "iso_local_cache_dir": "{{ env `iso_local_cache_dir` }}",
    "iso_cached_file_name": "{{ env `iso_cached_file_name` }}",
    "ram_size": "4096",
    "disk_size": "60000",
    "hyperv_generation": "2",

    "vm_name": "{{ env `vm_name` }}",
    "build_output_directory": "../../.output",
    "vagrant_boxes_dir": "../../.boxes",

    "boot_command_prefix": "<enter><wait><f6><esc><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
    "preseed": "preseed-hyperv.cfg",

    "is_desktop": "false",

    "locale": "en_US",
    "time_zone": "Asia/Jerusalem",
    "keyboard_layout": "Hebrew",
    "keyboard_layout_variant": "Hebrew",

    "custom_role": "chef-helper::dummy_recipe",
    "custom_attribute_name": "dummyKey",
    "custom_attribute_value": "dummyValue",
    "mono_apt_repo_distro": "",

    "hyperv_iso_user_name": "vagrant",
    "hyperv_iso_user_password": "vagrant",
    "hyperv_iso_user_group": "vagrant",

    "docker_user_name": "root",
    "docker_user_password": "",
    "docker_user_group": "root",
    "docker_image": "ubuntu",

    "docker_imported_image_name": "dg/ubuntu",
    "docker_imported_image_tag": "latest",

    "docker_file_changes": ""
  }
}